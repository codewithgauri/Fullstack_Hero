      <script>
          
          window.onload=function(){
          right=100;
          up=130;
          down=0;
          var player=document.getElementById("player");
              var a=document.getElementById("a");
              var b=document.getElementById("b");
              var c=document.getElementById("c")
          }
          
          b.addEventListener('touchstart',function(){
          setInterval(moveright)
          function moveright(){
              right++;
              player.style.marginLeft=right+"px";
              if(right==181 || right==284){
                  right--;
                   player.style.marginLeft=right+"px";
                
              }
          }
              
          })
          
      b.addEventListener('touchend',function(){
          setInterval(stopmoveright)
          function stopmoveright(){
              right--;
              player.style.marginLeft=right+"px"
          }
              
          })  
          
          a.addEventListener('touchstart',function(){
              setInterval(moveleft)
              function moveleft(){
                right--;
                player.style.marginLeft=right+"px" ;
                if(right==0) {
                    right++;
                    player.style.marginLeft=right+"px"
                }
              }
          }) 
          
          
          
      a.addEventListener('touchend',function(){
              setInterval(stopmoveleft)
              function stopmoveleft(){
                right++;
                player.style.marginLeft=right+"px"  
              }
          }) 
             
          
          c.addEventListener('touchstart',function(){
              setInterval(moveup)
              function moveup(){
              up--;
              player.style.marginTop=up+"px";
              if(up==0){
              setInterval(movedownwards)
              function movedownwards(){
                  up++;
                  player.style.marginTop=up+"px";
                  if(up==130){
                      up--;
                      player.style.marginTop=up+"px"
                  }
              }
                 up++;  player.style.marginTop=up+"px"     
                  }
                  
              }
                  
              
          })

      </script>
